{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "jsx": "react",
        "strict": true,
        "target": "ES5",
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES6"
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src"
    ]
}